<Window x:Class="Mathias_Loenborg_Friis_201505665.Windows.payCashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mathias_Loenborg_Friis_201505665.Windows"
        mc:Ignorable="d"
        Title="payCashWindow" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" MinWidth="100" />
            <ColumnDefinition Width="1*" MinWidth="100"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Label Grid.Row="0">Cash received:</Label>

        <TextBox Name="txtCash" Grid.Column="1" Grid.Row="0" MinWidth="250"></TextBox>

        <WrapPanel Grid.Row="1" HorizontalAlignment="Right" Margin="0,15,0,0" Grid.Column="1" Width="130">
            <Button IsDefault="True" Name="btnDialogOk" Click="btnDialogOk_Click" MinWidth="60" Margin="0,0,10,0">_Ok</Button>
            <Button IsCancel="True" MinWidth="60" Click="btnDialogOk_Click">_Cancel</Button>
        </WrapPanel>

    </Grid>
</Window>
