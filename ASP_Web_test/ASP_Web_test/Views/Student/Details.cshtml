@model ASP_Web_test.Models.Students

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>
<h4>Students</h4>
<div>

    <table>
        <thead>
            <tr>
                <th>
                    <label>Name</label>
                </th>
                <th>
                    <label>Grade</label>
                </th>
                <th>
                    <label>ID</label>
                </th>
            </tr>
        </thead>

        <tbody>

            @foreach (Student s in Model.students)
            {
                <tr>
                    <td>@Html.DisplayFor(model => s.Name)</td>
                    <td>@Html.DisplayFor(model => s.Grade)</td>
                    <td>@Html.DisplayFor(model => s.ID)</td>
                </tr>
            }
        </tbody>
    </table>

    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.averageGrade);
        </dt>
        <dd>
            @Html.DisplayFor(model => model.averageGrade);
        </dd>
    </dl>
    
    @foreach (Student s in Model.students)
    {
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => s.Name)
            </dt>
            <dd>
                @Html.DisplayFor(model => s.Name)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => s.Grade)
            </dt>
            <dd>
                @Html.DisplayFor(model => s.Grade)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => s.ID)
            </dt>
            <dd>
                @Html.DisplayFor(model => s.ID)
            </dd>
            @Html.ActionLink("Delete", "Delete", new { id = s.ID}) |
            @Html.ActionLink("Edit", "Edit", new { id = s.ID }) |
        </dl>
    }
</div>
